<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_shopping_complete"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
          android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
          android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/delete_btn_normal" />

    <TextView
        android:id="@+id/tv_shopping_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping_complete"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_complete_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_complete_name"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping_complete"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_complete_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_complete_pack"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping_complete"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_complete_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/tv_shopping_complete_price"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/plus_minus_bg" >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/cart_add" />

        <Button
            android:id="@+id/btn_reduce"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/btn_add"
            android:background="@drawable/cart_minus" />
    </RelativeLayout>

</RelativeLayout>