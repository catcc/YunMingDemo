<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_shopping"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_shopping_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_name"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_pack"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_shopping"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shopping_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/tv_shopping_price"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/tv_shopping_number"
        android:contentDescription="@null"
        android:src="@drawable/chevron" />
    

</RelativeLayout>